@model IEnumerable<SmartMart3.Models.cProduct>
  
<!DOCTYPE html>
<html>
<head>
    <link href="../../Content/Site.css" rel="stylesheet" type="text/css" />
    <title>Sale</title>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
</head>
<body>
    <div>
        <header>Smart mart - Sale</header>
        <ul>
        <h3><li><a href="@Url.Content("~/Home/Index")">Home</a></li>
        <li><a href="@Url.Content("~/Cart/Cart")">Cart</a></li>
        <li><a href="@Url.Content("~/Home/MakeOrder")">Make a new order</a></li></h3>
         
        <hca><li><a>@{Html.RenderAction("CategoryList", "Store");}</a></li></hca>
     </ul>         
    </div>
    <p>Order ID: @SmartMart3.Models.SaleEntities.sample.order[SmartMart3.Models.SaleEntities.sample.OrderCount-2].Id</p>
    <p>Customer: @SmartMart3.Models.SaleEntities.sample.order[SmartMart3.Models.SaleEntities.sample.OrderCount-2].customerName</p>
    <table>
    <tr>

        <th>
            Product name
        </th>
        <th>
            Quantity
        </th>
        
        <th>
            Total
        </th>
        <th></th>
    </tr>
    @{
        int ntotal = 0;
    }
    

@foreach (var item in SmartMart3.Models.SaleEntities.sample.cproduct)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.cost)
        </td>
        @{ntotal = ntotal + item.cost;}
    </tr>
}

</table>      
<p>Score: @SmartMart3.Models.SaleEntities.sample.order[SmartMart3.Models.SaleEntities.sample.OrderCount-2].Score</p>
@{int a = SmartMart3.Models.SaleEntities.sample.order[SmartMart3.Models.SaleEntities.sample.OrderCount-2].Score;
 int payment = ntotal - a;}    
    <p>Payment: @payment.ToString()</p>
   
</html>